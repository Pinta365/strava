{
    "name": "@pinta365/strava",
    "version": "0.0.1",
    "exports": "./mod.ts",
    "tasks": {
        "pre:push": "deno fmt --check && deno lint && deno check mod.ts && deno test -A",
        "build:npm": "deno run -A scripts/build_npm.ts",
        "generate:types": "deno run -A scripts/generate_types.ts"
    },
    "fmt": {
        "indentWidth": 4,
        "lineWidth": 150
    },
    "imports": {
        "@cross/test": "jsr:@cross/test@^0.0.14",
        "@std/assert": "jsr:@std/assert@^1.0.16",
        "@cross/runtime": "jsr:@cross/runtime@^1.2.1"
    },
    "publish": {
        "exclude": [
            ".github/",
            "AGENTS.md",
            "local_test/",
            "scripts/",
            "references/",
            "test/",
            "*.map"
        ]
    }
}
